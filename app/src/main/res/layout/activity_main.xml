<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_add_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add first"/>

        <Button
            android:id="@+id/button_add_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add last"/>

        <com.app.simon.anidemo.ItemLinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/button_remove_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="remove first"/>

        <Button
            android:id="@+id/button_remove_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="remove last"/>

    </LinearLayout>

</ScrollView>